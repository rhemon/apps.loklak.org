[default]
bears = LineLengthBear, InvalidLinkBear
files = **.js, **.css, **.html, **.yml, **.json
ignore = **.min.js, **.min.css
max_line_length = 90

[html]
bears = HTMLLintBear
files = **.html
htmllint_ignore = indentation, optional_tag, concerns_separation, capitalization

[css]
bears = PHPCodeSnifferBear, CSSLintBear
files = **.css
ignore = **.min.css

[js]
bears = JSHintBear, PHPCodeSnifferBear
files = **.js
ignore = **.min.js